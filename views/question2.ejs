<%- include('layout', { body: `
    <div class="max-w-2xl mx-auto bg-white p-6 rounded-lg shadow">
        <h2 class="text-2xl font-bold mb-6 border-b pb-2">Summed Total for LGA</h2>
        
        <form action="/lga-total" method="GET" class="mb-8">
            <label class="block text-sm font-medium text-gray-700 mb-2">Select Local Government Area</label>
            <div class="flex gap-2">
                <select name="lga_id" class="flex-1 block w-full rounded-md border-gray-300 border p-2 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                    <option value="">-- Select LGA --</option>
                    ${lgas.map(lga => `<option value="${lga.lga_id}">${lga.lga_name}</option>`).join('')}
                </select>
                <button type="submit" class="bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700">Calculate Total</button>
            </div>
        </form>

        ${totalResults.length > 0 ? `
            <div class="mt-6">
                <h3 class="text-xl font-semibold mb-4 text-gray-800">Summed Results for: <span class="text-green-600">${selectedLga}</span></h3>
                <table class="min-w-full divide-y divide-gray-200 border">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Party</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total Score</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        ${totalResults.map(row => `
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900">${row.party_abbreviation}</td>
                                <td class="px-6 py-4 whitespace-nowrap text-gray-500">${row.total_score}</td>
                            </tr>
                        `).join('')}
                    </tbody>
                </table>
            </div>
        ` : `<p class="text-gray-500 italic">Select an LGA to view aggregated results.</p>`}
    </div>
`}) %>