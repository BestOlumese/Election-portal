<%- include('layout', { body: `
    <div class="max-w-2xl mx-auto bg-white p-6 rounded-lg shadow">
        <h2 class="text-2xl font-bold mb-6 border-b pb-2">Individual Polling Unit Result</h2>
        
        <form action="/polling-unit" method="GET" class="mb-8">
            <label class="block text-sm font-medium text-gray-700 mb-2">Select Polling Unit</label>
            <div class="flex gap-2">
                <select name="unit_id" class="flex-1 block w-full rounded-md border-gray-300 border p-2 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                    <option value="">-- Select a Unit --</option>
                    ${pollingUnits.map(unit => `<option value="${unit.uniqueid}">${unit.polling_unit_name}</option>`).join('')}
                </select>
                <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700">Get Result</button>
            </div>
        </form>

        ${results.length > 0 ? `
            <div class="mt-6">
                <h3 class="text-xl font-semibold mb-4 text-gray-800">Results for: <span class="text-blue-600">${selectedUnit}</span></h3>
                <table class="min-w-full divide-y divide-gray-200 border">
                    <thead class="bg-gray-50">
                        <tr>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Party</th>
                            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Score</th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-200">
                        ${results.map(row => `
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900">${row.party_abbreviation}</td>
                                <td class="px-6 py-4 whitespace-nowrap text-gray-500">${row.party_score}</td>
                            </tr>
                        `).join('')}
                    </tbody>
                </table>
            </div>
        ` : `<p class="text-gray-500 italic">No results found or no unit selected.</p>`}
    </div>
`}) %>