<%- include('layout', { body: `
    <div class="max-w-lg mx-auto bg-white p-6 rounded-lg shadow">
        <h2 class="text-2xl font-bold mb-6 border-b pb-2">Add Result for New Polling Unit</h2>

        ${message ? `<div class="p-4 mb-4 text-sm text-green-700 bg-green-100 rounded-lg" role="alert">${message}</div>` : ''}
        
        <form action="/new-result" method="POST">
            <div class="mb-6">
                <label class="block text-sm font-medium text-gray-700 mb-2">Polling Unit</label>
                <select name="polling_unit_id" required class="block w-full rounded-md border-gray-300 border p-2 shadow-sm focus:border-blue-500 focus:ring-blue-500">
                    <option value="">-- Select Polling Unit --</option>
                    ${pollingUnits.map(unit => `<option value="${unit.uniqueid}">${unit.polling_unit_name}</option>`).join('')}
                </select>
            </div>

            <div class="space-y-4">
                <h3 class="text-lg font-medium text-gray-700">Enter Scores by Party</h3>
                <div class="grid grid-cols-2 gap-4">
                    ${parties.map(party => `
                        <div>
                            <label class="block text-xs font-medium text-gray-500 mb-1">${party.partyid}</label>
                            <input type="number" name="results[${party.partyid}]" placeholder="Score" class="block w-full rounded-md border-gray-300 border p-2 shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                        </div>
                    `).join('')}
                </div>
            </div>

            <div class="mt-8">
                <button type="submit" class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    Save Results
                </button>
            </div>
        </form>
    </div>
`}) %>